<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/manaslu"/>

        <TextView
            style="@style/textViewStyle"
            android:text="@string/question_1"/>
        <RadioGroup
            style="@style/radioGroupStyle"
            android:id="@+id/radio_group_question_1">
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_1_answer_1_correct"
                android:text="@string/question_1_answer_1"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_1_answer_2_wrong"
                android:text="@string/question_1_answer_2"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_1_answer_3_wrong"
                android:text="@string/question_1_answer_3"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_1_answer_4_wrong"
                android:text="@string/question_1_answer_4"/>
        </RadioGroup>

        <TextView
            style="@style/textViewStyle"
            android:text="@string/question_2"/>
        <RadioGroup
            style="@style/radioGroupStyle"
            android:id="@+id/radio_group_question_2">
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_2_answer_1_wrong"
                android:text="@string/question_2_answer_1"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_2_answer_2_wrong"
                android:text="@string/question_2_answer_2"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_2_answer_3_wrong"
                android:text="@string/question_2_answer_3"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_2_answer_4_correct"
                android:text="@string/question_2_answer_4"/>
        </RadioGroup>

        <TextView
            style="@style/textViewStyle"
            android:text="@string/question_3"/>
        <RadioGroup
            style="@style/radioGroupStyle"
            android:id="@+id/radio_group_question_3">
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_3_answer_1_wrong"
                android:text="@string/question_3_answer_1"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_3_answer_2_wrong"
                android:text="@string/question_3_answer_2"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_3_answer_3_correct"
                android:text="@string/question_3_answer_3"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_3_answer_4_wrong"
                android:text="@string/question_3_answer_4"/>
        </RadioGroup>

        <TextView
            style="@style/textViewStyle"
            android:text="@string/question_4"/>
        <RadioGroup
            style="@style/radioGroupStyle"
            android:id="@+id/radio_group_question_4">
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_4_answer_1_wrong"
                android:text="@string/question_4_answer_1"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_4_answer_2_correct"
                android:text="@string/question_4_answer_2"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_4_answer_3_wrong"
                android:text="@string/question_4_answer_3"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_4_answer_4_wrong"
                android:text="@string/question_4_answer_4"/>
        </RadioGroup>

        <TextView
            style="@style/textViewStyle"
            android:text="@string/question_5"/>
        <RadioGroup
            style="@style/radioGroupStyle"
            android:id="@+id/radio_group_question_5">
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_5_answer_1_wrong"
                android:text="@string/question_5_answer_1"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_5_answer_2_wrong"
                android:text="@string/question_5_answer_2"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_5_answer_3_wrong"
                android:text="@string/question_5_answer_3"/>
            <RadioButton
                style="@style/radioButtonStyle"
                android:id="@+id/question_5_answer_4_correct"
                android:text="@string/question_5_answer_4"/>
        </RadioGroup>


        <Button
            android:id="@+id/submit_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:textAllCaps="true"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>
</ScrollView>